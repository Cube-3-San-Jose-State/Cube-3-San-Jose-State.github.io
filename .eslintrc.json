{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "plugin:react/recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/display-name": 1,  // Warning for 'react/display-name' errors
        "react/prop-types": 1,          // Warning for 'react/prop-types' errors
        "semi": ["error", "always"],
        "quotes": ["error", "double"]
    }
}
